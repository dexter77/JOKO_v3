  <div class="grid grid-cols-3 gap-4">
    <%= simple_form_for @user do |f| %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%# <%= f.input :remember_me, class:"checke", as: :boolean if devise_mapping.rememberable? %>

        <div class="form-actions">
          <%= f.button :submit, "Connexion", class:'send-button' %>
        </div>
      <% end %>
      <br>
      <%# <%= render "devise/shared/links" %>
    </div>
  </div>

